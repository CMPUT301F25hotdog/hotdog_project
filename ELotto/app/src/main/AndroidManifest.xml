<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ELotto">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />

        <activity
            android:name=".ui.home.EventCreationView"
            android:exported="false" />

        <activity
            android:name=".ui.home.QRCodeView"
            android:exported="true" />

        <activity
            android:name=".ui.home.MyEventsView"
            android:exported="false" />

        <!-- ADMIN ACTIVITIES -->
        <activity
            android:name=".ui.AdminDashboardActivity"
            android:exported="false"
            android:label="Admin Dashboard" />

        <activity
            android:name=".ui.BrowseEventsActivity"
            android:exported="false"
            android:label="Browse Events"
            android:parentActivityName=".ui.AdminDashboardActivity" />

        <activity
            android:name=".ui.BrowseProfilesActivity"
            android:exported="false"
            android:label="Browse Profiles"
            android:parentActivityName=".ui.AdminDashboardActivity" />

        <activity
            android:name=".ui.BrowseNotificationLogsActivity"
            android:exported="false"
            android:label="Notification Logs"
            android:parentActivityName=".ui.AdminDashboardActivity" />

    </application>

</manifest>