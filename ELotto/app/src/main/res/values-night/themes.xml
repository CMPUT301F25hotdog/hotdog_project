<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ELotto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - Your blue -->
        <item name="colorPrimary">@color/main_icon_blue</item>
        <item name="colorPrimaryVariant">@color/main_icon_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/main_icon_blue</item>
        <item name="colorSecondaryVariant">@color/main_icon_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color - Keep it white/light -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>