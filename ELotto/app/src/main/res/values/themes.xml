<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ELotto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_icon_blue</item>
        <item name="colorPrimaryVariant">@color/main_icon_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/main_icon_blue</item>
        <item name="colorSecondaryVariant">@color/main_icon_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color - Keep it white/light -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Custom Button Colors -->

    </style>
    <style name="Widget.Elotto.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeErrorColor">@color/error_red</item>
    </style>
    <style name="RedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/error_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GreyButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/darker_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BlueButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/main_icon_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>