<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_outline_background"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back_24"
                android:contentDescription="Back"
                android:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="My Profile"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/main_icon_blue"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />
        </LinearLayout>

        <!-- Profile picture -->
        <FrameLayout
            android:id="@+id/profile_image_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:focusable="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_outline_background" />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/account_circle_24px"
                android:contentDescription="Profile picture"
                android:tint="#C8C8C8"
                android:enabled="false" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to change profile picture"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="@color/error_red"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_person_24"
            app:startIconTint="@color/form_icon"
            app:boxStrokeColor="@color/form_outline"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Last"
                android:paddingStart="40dp"
                android:inputType="textPersonName"
                android:enabled="false"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" *"
                android:textColor="@color/error_red"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_email_24"
            app:startIconTint="@color/form_icon"
            app:boxStrokeColor="@color/form_outline"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@example.com"
                android:paddingStart="40dp"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone (Optional)"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_phone_24"
            app:startIconTint="@color/form_icon"
            app:boxStrokeColor="@color/form_outline"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(123) 456-7890"
                android:paddingStart="40dp"
                android:inputType="phone"
                android:enabled="false"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Device ID info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F2FF"
            android:padding="12dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/device_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device ID: 94h89Rb96vgf3456"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your device ID is used to identify you after signup, no password required!"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Save / Delete buttons -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/main_icon_blue"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FFF2F2"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/error_red"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
