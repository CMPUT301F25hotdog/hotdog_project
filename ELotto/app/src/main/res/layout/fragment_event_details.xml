<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Header with Back Button and Title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/arrow_back_24px"
                    android:contentDescription="@string/back_button" />

                <TextView
                    android:id="@+id/eventTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Bouldering" />
            </RelativeLayout>

            <!-- Event Image and Details Side by Side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- Event Image -->
                <ImageView
                    android:id="@+id/eventImageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:background="@color/background_light_grey"
                    android:src="@drawable/image_24px"
                    android:contentDescription="@string/event_image" />

                <!-- Event Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:paddingTop="8dp">

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/event_24px"
                            app:tint="@color/main_icon_blue"
                            android:contentDescription="@string/date_icon" />

                        <TextView
                            android:id="@+id/eventDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            tools:text="Monday, June 15" />
                    </LinearLayout>

                    <!-- Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/alarm_24px"
                            app:tint="@color/main_icon_blue"
                            android:contentDescription="@string/time_icon" />

                        <TextView
                            android:id="@+id/eventTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            tools:text="14:30 - 17:30" />
                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/location_on_24px"
                            app:tint="@color/main_icon_blue"
                            android:contentDescription="@string/location_icon" />

                        <TextView
                            android:id="@+id/eventLocationTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="Mt. Elbert, CO" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Waitlisted Status Badge -->
            <LinearLayout
                android:id="@+id/waitlistedBadgeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/rounded_card_background"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_waitlist_x_24"
                    android:contentDescription="Waitlist icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Waitlisted"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Waitlisted Info Box -->
            <androidx.cardview.widget.CardView
                android:id="@+id/waitlistedInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/light_blue_background"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Info Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_24"
                            app:tint="@color/main_icon_blue"
                            android:contentDescription="Info icon" />

                        <TextView
                            android:id="@+id/infoCardHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="What does 'Waitlisted' mean?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_icon_blue" />
                    </LinearLayout>

                    <!-- Info Text -->
                    <TextView
                        android:id="@+id/infoCardMessageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You weren't selected in the initial lottery draw, but you're still on the waiting list. Organizers might select you if they decide to draw more entrants or if someone they selected doesn't respond. If you get selected, you will still receive a notification."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Entries Count Card - Centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/light_blue_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/group_24px"
                            app:tint="@color/main_icon_blue"
                            android:contentDescription="@string/entries_icon" />

                        <TextView
                            android:id="@+id/entriesCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            tools:text="24 of 35" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Registration and Lottery Dates Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/registrationDatesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/light_orange_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Registration Ends -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/registrationEndTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/registration_ends"
                            android:textSize="16sp"
                            android:textColor="@color/waitlist_orange"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/registrationEndDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            tools:text="Friday, June 5" />
                    </LinearLayout>

                    <!-- Lottery Drawn -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/lotteryDrawnTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lottery_drawn"
                            android:textSize="16sp"
                            android:textColor="@color/waitlist_orange"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lotteryDrawnDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            tools:text="Monday, June 8" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About Section Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/about"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/eventDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/black"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis. Tempus leo eu aenean sed diam urna tempor." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Enter Lottery Button -->
    <Button
        android:id="@+id/enterLotteryButton"
        style="@style/BlueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        android:text="@string/enter_lottery"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_primary_background"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"/>

    <!-- Leave Waiting List Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaveWaitlistButton"
        style="@style/RedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="@drawable/button_leave_background"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Leave Waiting List"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <!-- No Action List Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/noActionButton"
        style="@style/GreyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="@drawable/no_action_button_background"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Loading..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
