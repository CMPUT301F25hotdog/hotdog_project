<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Event Name + Status Badge + Delete Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/btn_delete_notification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/cancel_24px"
                android:padding="4dp"
                android:tint="@color/error_red"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete notification" />
        </LinearLayout>

        <!-- Message -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification message goes here"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Footer: Timestamp + Recipients -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_notifications_black_24dp"
                app:tint="@color/form_icon" />

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="March 15 at 2:30 PM"
                android:textSize="12sp"
                android:textColor="@color/form_icon"
                android:layout_marginStart="4dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person_24"
                app:tint="@color/form_icon"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User: abc123"
                android:textSize="12sp"
                android:textColor="@color/form_icon"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="100dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>