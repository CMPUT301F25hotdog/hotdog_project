<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/account_circle_24px"
            app:tint="@color/main_icon_blue"
            android:contentDescription="Profile Icon"
            android:padding="4dp"
            android:background="@drawable/circle_outline_background" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer"
                    android:textSize="12sp"
                    android:textColor="@color/success_green"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/status_badge_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@email.com"
                android:textSize="14sp"
                android:textColor="@color/form_icon"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/iv_view_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_help_24"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/main_icon_blue"
                android:contentDescription="View Details" />

            <ImageView
                android:id="@+id/iv_revoke_organizer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_check_circle_outline_24"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/waitlist_orange"
                android:contentDescription="Revoke Organizer"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cancel_button"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/error_red"
                android:contentDescription="Delete Profile"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>