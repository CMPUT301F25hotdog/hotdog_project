<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Event History"
        app:titleTextColor="@color/black" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Drawn Events Section -->
            <TextView
                android:id="@+id/drawnEventsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drawn Events"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Drawn Events RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/drawnEventsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_event_history" />

            <!-- Empty State for Drawn Events -->
            <TextView
                android:id="@+id/drawnEventsEmptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No drawn events yet"
                android:textColor="@color/form_icon"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_grey"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Pending Events Section -->
            <TextView
                android:id="@+id/pendingEventsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Events"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- Pending Events RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pendingEventsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="1"
                tools:listitem="@layout/item_event_history" />

            <!-- Empty State for Pending Events -->
            <TextView
                android:id="@+id/pendingEventsEmptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No pending events"
                android:textColor="@color/form_icon"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>