<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <!-- https://www.geeksforgeeks.org/android/cardview-in-android-with-example/ -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/event_image_desc"
            android:background="@color/background_light_grey"
            android:src="@drawable/image_24px"/>


        <!-- Event Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Event Name -->
            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Bouldering" />

            <!-- Event Date and Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/alarm_24px"
                    android:contentDescription="@string/date_icon_desc"
                    app:tint="@color/main_icon_blue" />

                <TextView
                    android:id="@+id/eventDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/main_icon_blue"
                    tools:text="June 15, 14:30" />
            </LinearLayout>

            <!-- Event Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location_on_24px"
                    android:contentDescription="@string/location_icon_desc"
                    app:tint="@color/main_icon_blue" />

                <TextView
                    android:id="@+id/eventLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/main_icon_blue"
                    tools:text="Boulder, CO" />
            </LinearLayout>

            <!-- Entry Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/group_24px"
                    android:contentDescription="@string/entrants_icon_desc"
                    app:tint="@color/main_icon_blue" />

                <TextView
                    android:id="@+id/eventEntryCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/main_icon_blue"
                    tools:text="24 Entries / 35 Spots" />
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/eventStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_badge_background"
                tools:text=""
                tools:backgroundTint="@color/success_green" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>