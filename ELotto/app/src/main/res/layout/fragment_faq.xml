<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Back button and title row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/backButtonFaq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_outline_background"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="Back"
            android:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="24dp"
        android:paddingBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn how the lottery system works"
        android:textColor="@color/form_icon"
        android:textSize="14sp"
        android:paddingBottom="16dp" />

    <!-- FAQ Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/faqCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_light_grey"
        android:padding="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Row: Question and arrow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/faqQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="How does the lottery selection process work?"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/dropArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/black" />
            </LinearLayout>

            <!-- Subtext below -->
            <TextView
                android:id="@+id/faqSubtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to learn about the selection criteria"
                android:textColor="@color/form_icon"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
