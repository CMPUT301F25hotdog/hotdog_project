<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_card_background"
            android:contentDescription="@string/event_image"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24" />

        <!-- Event Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Event Name -->
            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Bouldering"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Organizer -->
            <TextView
                android:id="@+id/event_organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="By [Name]"
                android:textColor="@color/form_icon"
                android:textSize="12sp" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Monday, 15 June"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- Entrants Count -->
            <TextView
                android:id="@+id/event_entrants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Entrants : 24/35"
                android:textColor="@color/form_icon"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- View Button -->
            <ImageView
                android:id="@+id/btn_view_event"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View Event"
                android:padding="4dp"
                android:src="@drawable/baseline_check_circle_outline_24"
                app:tint="@color/main_icon_blue" />

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/btn_delete_event"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete Event"
                android:padding="4dp"
                android:src="@drawable/cancel_button"
                app:tint="@color/error_red" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status Badge (Optional) -->
    <View
        android:id="@+id/status_badge"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/error_red"
        android:visibility="gone" />

</androidx.cardview.widget.CardView>